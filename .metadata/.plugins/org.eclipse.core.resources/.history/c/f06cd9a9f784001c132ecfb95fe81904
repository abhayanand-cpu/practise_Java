import java.util.*;


class Loop_2{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        int t=in.nextInt();
        
        for(int i=0;i<t;i++){
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            int s = 0;
            int j = 0;
            while (j<n) {
            s = a+(int)(Math.pow(2,j)*b);
            
            
            j++;
            System.out.printf("%d ",s);
            }
           
            
        }
        in.close();
    }
}