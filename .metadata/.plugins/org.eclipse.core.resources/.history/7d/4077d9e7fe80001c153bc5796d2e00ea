		int b = sc.nextInt();
		int scissor = 0;
		int rock = 1;
		int paper = 2;
		if (a==0 && b==0)
			System.out.println("The computer is "+0+". You are "+0+" too"+". It is a draw");
		else if (a==1 && b==1)
			System.out.println("The computer is "+1+". You are "+1+" too"+". It is a draw");
		else if (a==2 && b==2)
			System.out.println("The computer is "+2+". You are "+2+" too"+". It is a draw");
		else if (a==0 && b==1)
			System.out.println("The computer is "+0+". You are "+1+". you won");
