import java.util.*;
import java.io.*;

class Solution{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        int t=in.nextInt();
        for(int i=0;i<t;i++){
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            int v = (int)((Math.pow(2,i))*b);
            int c = a+v;
            System.out.println(c);
            n++;
        }
        in.close();
    }
}