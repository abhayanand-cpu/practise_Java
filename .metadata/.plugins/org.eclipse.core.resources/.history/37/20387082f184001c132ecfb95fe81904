import java.util.*;


class Loop_2{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        int t=in.nextInt();
        for(int i=0;i<t;i++){
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            int s = 0;
            if (s<n) {
            s = (int)((Math.pow(2,i))*b);
            s = a+s;
            
            }
            System.out.printf("%d ",s);
            
        }
        in.close();
    }
}