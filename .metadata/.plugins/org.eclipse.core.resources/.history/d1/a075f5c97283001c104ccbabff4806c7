import java.util.Scanner;
public class A4Q_11_4 {
	public static void main(String[]args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		for (int i = 1; i<=n; i++) {
			for ( int j = 1;  j<=n; j++) {
				if ( j<=n-i )
					System.out.print(" ");
			}
				
		}
		for ( int k = 1; k<=n*3; k++ ) {
			System.out.println(k);
		}
			System.out.println();
			sc.close();
	}
			
			
}
		
	


