import java.util.Scanner;

public class Java_datatypes {

    public static void main(String[] args) {
       Scanner sc = new Scanner(System.in);
       
       byte a = sc.nextByte();
       if (a>=-128 && a<=127)
    	   System.out.println(a+" can be fitted in: \n"+"*byte\n"+"*short\n"+"*int\n"+"*long\n");
       short b = sc.nextShort();
       if (b>=-32_768 && b<=+32_767)
    	   System.out.println(b+" can be fitted in: \n"+"*short\n"+"*int\n"+"*long\n");
       int c = sc.nextInt();
       if (c>=-2_147_483_648 && c<=+2_147_483_647)
    	   System.out.println(c+" can be fitted in: \n"+"*int\n"+"*long\n");
       long d = sc.nextLong();
       if (d>=-2_147_483_648 && d<=+2_147_483_647 )
    	   System.out.println(d+" can be fitted in: \n"+"*int\n"+"*long\n");
       else
    	   System.out.printf("%d can't be fitted anywhere. ",a,b,c,d);
       sc.close();
    }
}
